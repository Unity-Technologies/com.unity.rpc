<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net471;netcoreapp2.2</TargetFrameworks>
    <SolutionDir Condition=" '$(SolutionDir)' == '' ">..\..\..\..\</SolutionDir>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(SolutionDir)icon.png" CopyToOutputDirectory="PreserveNewest" Pack="true" PackagePath="icon.png" Condition="Exists('$(SolutionDir)icon.png')"/>
    <None Include="$(SolutionDir)LICENSE.md" CopyToOutputDirectory="PreserveNewest" Pack="true" PackagePath="LICENSE.md" Condition="Exists('$(SolutionDir)LICENSE.md')"/>
  </ItemGroup>

  <Import Project="$(SolutionDir)common\configuration.targets" Condition="Exists('$(SolutionDir)common\configuration.targets')" />
  <Import Project="$(SolutionDir)common\packaging.props" Condition="Exists('$(SolutionDir)common\packaging.props')" />

  <ItemGroup>
    <VersionFiles Include="$(IntermediateOutputPath)\$(AssemblyName).Version$(DefaultLanguageSourceExtension)" />
  </ItemGroup>

  <Target Name="CopyVersionFiles"
    Condition="Exists('$(SolutionDir)common\packaging.targets') and Exists('$(IntermediateOutputPath)\$(AssemblyName).Version$(DefaultLanguageSourceExtension)')"
    DependsOnTargets="AfterBuild"
    AfterTargets="AfterBuild"
    Inputs="@(VersionFiles)"
    Outputs="@(VersionFiles->'$(PublishTo)$(PackageName)$(PackageSubFolder)Version%(Extension)')"
    >

    <Copy
      SourceFiles="@(VersionFiles)"
      DestinationFiles="@(VersionFiles->'$(PublishTo)$(PackageName)$(PackageSubFolder)Version%(Extension)')"
      SkipUnchangedFiles="true" />

  </Target>
</Project>
